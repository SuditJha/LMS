      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/main-dashboard.css" />
  </head>
  <body>
    <header>
      <nav>
        <div class="menu">
          <div class="logo">
            <a href="#">Library</a>
          </div>
          <ul>
            <li><a class="normal-button" href="/logout">Log Out</a></li>
            <li class="profile-button">
              <a href="/profile">
                <img
                  src="https://cdn3d.iconscout.com/3d/premium/thumb/profile-5590850-4652486.png"
                  alt="Profile Pic"
                />
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Modal Add Book -->
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary add-book-btn"
      data-bs-toggle="modal"
      data-bs-target="#exampleModal"
    >
      Add Book
    </button>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add New Book</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <!-- Form Of Modal -->
          <div class="modal-body">
            <form action="/addBook" method="post">
              <div class="mb-2">
                <label for="dueDate" class="form-label">Book Name</label>
                <input
                  name="name"
                  type="text"
                  class="form-control"
                  id="exampleInputEmail1"
                  aria-describedby="Enter book name"
                  required
                />
              </div>

              <div class="mb-2">
                <label for="exampleInputEmail1" class="form-label"
                  >Book Author</label
                >
                <input
                  name="author"
                  type="text"
                  class="form-control"
                  id="exampleInputEmail1"
                  aria-describedby="Enter book Author"
                  required
                />
              </div>
              <select
                name="genre"
                class="form-select"
                aria-label="Default select example"
                required
              >
                <option>Select genre</option>
                <option value="Fiction">Fiction</option>
                <option value="Non fiction">Non-fiction</option>
                <option value="Fan-fiction">Fanfiction</option>
                <option selected value="Others">Others</option>
              </select>

              <button type="submit" class="btn btn-primary add-book-btn">
                Submit
              </button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Delete Book -->
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-danger add-book-btn"
      data-bs-toggle="modal"
      data-bs-target="#deleteBook"
    >
      Delete Book
    </button>
    <!-- Modal -->
    <div
      class="modal fade"
      id="deleteBook"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <!-- Form Of Modal -->
          <div class="modal-body">
            <form action="/deleteBook" method="post">
              <div class="mb-2">
                <label for="exampleInputEmail1" class="form-label"
                  >Enter Book ID</label
                >
                <input
                  name="id"
                  type="text"
                  class="form-control"
                  id="exampleInputEmail1"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Issue Book -->
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-success add-book-btn"
      data-bs-toggle="modal"
      data-bs-target="#issueBook"
    >
      Issue Book
    </button>
    <!-- Modal -->
    <div
      class="modal fade"
      id="issueBook"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Issue Book</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <!-- Form Of Modal -->
          <div class="modal-body">
            <form action="/issueBook" method="post">
              <div class="mb-2">
                <label for="id" class="form-label">Enter Book ID</label>
                <input
                  name="id"
                  type="text"
                  class="form-control"
                  id="id"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>

              <div class="mb-2">
                <label for="exampleInputEmail2" class="form-label"
                  >Customer Name</label
                >
                <input
                  name="name"
                  type="text"
                  class="form-control"
                  id="exampleInputEmail2"
                  aria-describedby="Enter Customer Name"
                  required
                />
              </div>

              <div class="mb-2">
                <label for="exampleInputEmail3" class="form-label"
                  >Address</label
                >
                <input
                  name="address"
                  type="text"
                  class="form-control"
                  id="exampleInputEmail3"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>

              <div class="mb-2">
                <label for="phone" class="form-label">Phone No.</label>
                <input
                  name="phone"
                  type="number"
                  class="form-control"
                  id="phone"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>

              <div class="mb-2">
                <label for="issueDate" class="form-label">Issue Date</label>
                <input
                  name="issueDate"
                  type="date"
                  class="form-control"
                  id="issueDate"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>

              <div class="mb-2">
                <label for="dueDate" class="form-label">Due Date</label>
                <input
                  name="dueDate"
                  type="date"
                  class="form-control"
                  id="dueDate"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>

              <button type="submit" class="btn btn-success">Issue</button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Return Book -->
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-warning add-book-btn"
      data-bs-toggle="modal"
      data-bs-target="#returnBook"
    >
      Return Book
    </button>
    <!-- Modal -->
    <div
      class="modal fade"
      id="returnBook"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Return Book</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <!-- Form Of Modal -->
          <div class="modal-body">
            <form action="/returnBook" method="post">
              <div class="mb-2">
                <label for="id" class="form-label">Enter Book ID</label>
                <input
                  name="id"
                  type="text"
                  class="form-control"
                  id="id"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>

              <div class="mb-2">
                <label for="dueDate" class="form-label">Return Date</label>
                <input
                  name="returnDate"
                  type="date"
                  class="form-control"
                  id="dueDate"
                  aria-describedby="Enter book ID"
                  required
                />
              </div>

              <button type="submit" class="btn btn-warning">Return</button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>
    <a href="/customers" class="btn btn-info">Customers Info</a>
    <!-- Display all books -->
    <div id="displayBooks">
      <h2 class="tab-title">YOUR BOOKS</h2>
      <table class="table tab">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Author</th>
            <th scope="col">Genre</th>
            <th scope="col">Book ID</th>
            <th scope="col">Issued</th>
          </tr>
        </thead>

        <tbody>
          <% books.forEach(function(book, index) { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= book.name %></td>
            <td><%= book.author %></td>
            <td><%= book.genre %></td>
            <td><%= book._id %></td>
            <td><%= book.issued %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/main-dashboard.css" />
  </head>
  <body>
    <header>
      <nav>
        <div class="menu">
          <div class="logo">
            <a href="/dashboard">Library</a>
          </div>
          <ul>
            <li><a class="normal-button" href="/logout">Log Out</a></li>
            <li class="profile-button">
              <a href="/profile">
                <img
                  src="https://cdn3d.iconscout.com/3d/premium/thumb/profile-5590850-4652486.png"
                  alt="Profile Pic"
                />
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Display all books -->
    <div id="displayBooks">
      <h2 class="tab-title">YOUR CUSTOMERS</h2>
      <table class="table tab">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Phone No.</th>
            <th scope="col">Book Taken</th>
            <th scope="col">Book Author</th>
          </tr>
        </thead>

        <tbody>
          <% customers.forEach(function(customer, index) { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= customer.name %></td>
            <td><%= customer.address %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.book.name %></td>
            <td><%= customer.book.author %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <footer></footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/index.js"></script>
  </body>
</html>
